<h1>Auctions</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>End</th>
      <th>Reserve</th>
      <th>User</th>

      <th colspan="3"></th>
            <th>Current Price</th>
    </tr>
  </thead>
  <tbody>
    <% @auctions.each do |auction| %>
      <tr>
        <td><%= auction.title %></td>
        <td><%= auction.description %></td>
        <td><%= auction.end %></td>
        <td><%= auction.reserve %></td>
        <td><%= auction.user.email %></td>
        <td><%= link_to 'Show', auction %></td>
        <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
          <td><%= link_to 'Destroy', auction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <% if auction.bids[0] != nil%>
        <td>$<%= auction.bids.order(amount: :desc).first.amount %></td>
        <% else %>
        <td>$0</td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Auction', new_auction_path %>
